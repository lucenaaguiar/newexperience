<%= link_to 'Entrar', new_guide_session_path %>
<section>
  <div>
    <%= form_tag search_tours_path, method: 'get' do %>
      <%= label_tag :location, 'Local' %>
      <%= text_field_tag :location, nil, placeholder: 'Salvador, Florianópolis, Curitiba...'%>
      <%= label_tag :category_id, 'Tipo de passeio' %>
      <%= select_tag :category_id, options_from_collection_for_select(@categories, :id, :name), prompt: 'Qualquer tipo de passeio'  %>
      <%= submit_tag 'Buscar' %>
    <% end %>
  </div>

  <div>
    <% @tours.each do |tour| %>
      <div>
        <h1><%= link_to tour.title, tour %></h1>
        <dl>
          <dt>Título</dt>
          <dd><%= tour.location.local%></dd>
          <dt>Categoria</dt>
          <dd><%= tour.category.name %></dd>
        </dl>
      </div>
    <% end %>
  </div>
</section>
