<h2>Novo usuário</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: 'Nome', autofocus: true %>
    <%= f.association :location, label: 'Localidade', label_method: :local %>
    <%= f.input :phone, label: 'Telefone' %>
    <%= f.input :email, required: true %>
    <%= f.input :password, label: 'Senha', required: true, hint: ("Mínimo #{@minimum_password_length} caracteres" if @minimum_password_length) %>
    <%= f.input :password_confirmation, label: 'Confirme senha', required: true %>
    <%= f.input :avatar, as: :file, label: 'Enviar Imagem' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Cadastrar Guia" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
