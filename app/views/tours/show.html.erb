<section>
  <div class="content-area" style="margin-top:20px">
    <div class="col-md-10 col-md-offset-2">
      <div class="col-md-6">
        <h2><%= @tour.title %></h3>
        <dl class="dl-horizontal">
          <p>
            <dt>Local</dt>
            <dd><%= @tour.location.local %></dd>
            <dt>Categoria</dt>
            <dd><%= @tour.category.name %></dd>
            <dt>Duração</dt>
            <dd><%= @tour.duration %></dd>
            <dt>Valor</dt>
            <dd><%= number_to_currency(@tour.amount) %></dd>
          </p>
          <p>
            <dt>Guia</dt>
            <dd><%= @tour.guide.name %></dd>
            <dt>Telefone</dt>
            <dd><%= @tour.guide.phone %></dd>
          </p>
        </dl>
      </div>
      <div class="col-md-6">
        <%= image_tag @tour.picture.url(:medium), class: "img-thumbnail" %>
      </div>
      <div class="col-md-10" style="margin-top:20px">
        <h3>Descrição</h3>
        <p>
          <%= @tour.description %>
        </p>
        <%= simple_form_for [@tour, @message] do |f| %>
          <div class="form-group">
            <%= f.input :name, label: 'Nome' %>
          </div>
          <div class="form-group">
            <%= f.input :phone, label: 'Telefone' %>
          </div>
          <div class="form-group">
            <%= f.input :email, label: 'Email' %>
          </div>
          <div class="form-group">
            <%= f.input :date_tour, label: 'Data do passeio' %>
          </div>
          <div class="form-group">
            <%= f.input :text_msg, label: 'Deixe uma mensagem para o guia' %>
          </div>
          <%= f.submit 'Enviar' %>
        <% end %>
      </div>



    </div>
  </div>
</section>
