<section style="margin-top:20px">
  <div class="col-md-3">
    <%= render partial: 'guides/details', locals: {guide: @guide} %>
  </div>
  <div class="col-md-9">
    <%= 'Não há passeios cadastrados!' if @guide.tour.empty?%>
    <% @guide.tour.each do |tour| %>
      <div class="panel panel-success">
        <div class="panel-heading">
          <h4 class="panel-title"><%= link_to tour.title, tour %></h3>
        </div>
        <div class="panel-body">
          <div class="col-md-2">
            <%= link_to tour do %>
              <%= image_tag tour.picture.url(:thumb), class: "img-thumbnail" %>
            <% end %>
          </div>
          <div class="col-md-10">
            <dl class="dl-horizontal">
              <dt>Local</dt>
              <dd><%= tour.location.local%></dd>
              <dt>Categoria</dt>
              <dd><%= tour.category.name %></dd>
            </dl>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>
